---
// src/components/Contatti.astro
const email = "studionannipierifrancesco@gmail.com";
const telefono = "+39 340 546 1880";
---
<section id="contact">
  <div class="container">
    <h2>Contatti e Sedi</h2>
    <p class="section-subtitle">
      Ricevo su appuntamento a Livorno e Pisa. Contattami per valutare insieme il percorso pi√π adatto alle tue esigenze.
    </p>
    
    <div class="contact-layout">
      
      <!-- Colonna Sinistra: Contatti -->
      <div class="contact-details">
        <h3>Recapiti</h3>
        
        <div class="contact-block">
          <h4>Telefono</h4>
          <p><a href={`tel:${telefono.replace(/\s/g, '')}`}>{telefono}</a></p>
        </div>

        <div class="contact-block">
          <h4>Email</h4>
          <p><a href={`mailto:${email}`}>{email}</a></p>
        </div>

        <div class="contact-block">
          <h4>Orari</h4>
          <p>Si riceve su appuntamento</p>
        </div>
      </div>

      <!-- Colonna Destra: Sedi -->
      <div class="contact-locations">
        <h3>Dove Ricevo</h3>
        
        <div class="location-box">
          <h4>Studio Livorno</h4>
          <p>Via Accademia Labronica 13</p>
          <p>(Presso Studi Medici)</p>
        </div>

        <div class="location-box">
          <h4>Studio Pisa</h4>
          <p>Piazza San Silvestro 7A, Pisa</p>
        </div>
      </div>

    </div>
  </div>
</section>
